.ACLModal.Modal {
    width: 35rem;
    max-width: 100vw;
    min-height: 25rem;

    .fa-remove {
        margin-right: 0.5rem;

        &:hover {
            text-decoration: none;
        }
    }


    .acl-entries {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        padding: 1rem;

    }

    .acl-entry {
        width: 32%;
    }

    .grant {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        flex-wrap: wrap;

        margin: 1rem;
        .PlayerAutocomplete, .GroupAutocomplete {
            margin: 0.5rem;

            flex-basis: 170px;
        }

        button {
            flex: 0;
            flex-basis: 8rem;
            display: block;
            height: 3em;
        }

        div {
            white-space: nowrap;
        }
    }
}
